{% extends 'admin/base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    
<div style = "position:relative; left:70px; top:20px;">
    <h1>posts list</h1>
    

    <table class="table">
        <thead>
            <tr>
                <th>IdPost</th>
                <th>Description</th>
                <th>Date</th>
                <th>UrlImg</th>
                <th>Titre</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.idPost }}</td>
                <td>{{ post.description }}</td>
                <td>{{ post.date ? post.date|date('Y-m-d') : '' }}</td>
                <td><div style = "position:relative; left:0px;"  class="zoom-in-out-box"><img src="{{ asset('uploads/' ~post.urlImg) }}" style=" width:500px; height:350px; " alt=""/></div></td>
                <td>{{ post.titre }}</td>
                <td>{{ post.active }}</td>
                <td>
                    <a href="{{ path('app_post_show', {'idPost': post.idPost}) }}">show</a>
                    <a href="{{ path('app_post_edit', {'idPost': post.idPost}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   {# <a href="{{ path('app_post_new') }}">Create new</a>#}
{% endblock %}
