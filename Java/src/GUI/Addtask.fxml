<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="317.0" prefWidth="366.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="GUI.AddtaskController">
    <VBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 24px;" text="Add Task" />        
        <TextField fx:id="tasknameField" promptText="Task Name" />
        <TextField fx:id="descriptionField" promptText="Description" />
        <TextField fx:id="priorityField" promptText="Priority" />
        <TextField fx:id="estimatedTimeField" promptText="Estimated Time" />
        
        <Button fx:id="addTaskButton" onAction="#addTask" text="Add Task" />
    </VBox>
</AnchorPane>
