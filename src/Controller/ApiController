
<?php
 namespace App\Controller;

 use App\Entity\Calendar;
use App\Entity\Post;
use DateTime;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Annotation\Route;

class ApiController extends AbstractController {

    /**
     * @Route("/api", name="api")
     */
    public function index()
    {
        return $this->render('api/index.html.twig', [
            'controller_name' => 'ApiController',
        ]);
    }
     /**
     * @Route("/api/{id}/edit", name="api_reservation_edit", methods={"PUT"})
     */
    public function majReservation(?Post $post, Request $request)
    {
        // On récupère les données
        $donnees = json_decode($request->getContent());

        if(
            isset($donnees->start) && !empty($donnees->start) &&
            isset($donnees->descp) && !empty($donnees->descp)
            
        ){
            // Les données sont complètes
            // On initialise un code
            $code = 200;

            // On vérifie si l'id existe
            if(!$post){
                // On instancie un rendez-vous
                $post = new Post();

                // On change le code
                $code = 201;
            }

            // On hydrate l'objet avec les données
        
            $post->setDescription($donnees->descp);
            $post->setDate(new DateTime($donnees->start));
            
         


            $em = $this->getDoctrine()->getManager();
            $em->persist($post);
            $em->flush();

            // On retourne le code  ;
            return new Response('Ok', $code);
        }else{
            // Les données sont incomplètes
            return new Response('Données incomplètes', 404);
        }


        return $this->redirectToRoute('post_index');
    }
}