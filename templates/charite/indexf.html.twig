{% extends 'front.html.twig' %}

{% block title %}Charite index{% endblock %}

{% block body %}
    <h1>Charite index</h1>
<div style = "position:relative; left:30px; top:200px;">
    <table class="table">
        <thead>
            <tr>
                <th>NomCharite</th>
                <th>LieuCharite</th>
                <th>TypeCharite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for charite in charites %}
            <tr>
                <td>{{ charite.nomCharite }}</td>
                <td>{{ charite.lieuCharite }}</td>
                <td>{{ charite.typeCharite }}</td>
                <td>
                    <a href="{{ path('app_charite_showf', {'idCharite': charite.idCharite}) }}">show</a>
                  
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
