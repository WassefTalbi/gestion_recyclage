{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ajouter un Evenement</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{'attr':{'novalidate':'novalidate'}}) }}



                    <label for="inputText" class="col-sm-4 col-form-label">NOM</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.nom,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label">nombreDePlaces</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.nbreDeplaces,{'attr':{'class':'form-control'}}) }}

                    </div>

                    <label for="inputText" class="col-sm-4 col-form-label">type</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.Type,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.Type) }}

                    <label for="inputText" class="col-sm-4 col-form-label">prix</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.prix,{'attr':{'class':'form-control'}}) }}


                    </div>

                    <label for="inputText" class="col-sm-4 col-form-label">date</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.date,{'attr':{'class':'form-control'}}) }}


                    </div>









                    <br/>

                    {{ form_end(f) }}
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}

                    </div>


                </div>
            </div>

        </div>

    </div>


{% endblock %}